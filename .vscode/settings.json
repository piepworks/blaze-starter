{
    "editor.formatOnSave": false,
    "[python]": {
        "editor.formatOnSave": true,
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.stylelint": true,
        "source.fixAll.eslint": true
    },
    "files.associations": {
        "*.py-tpl": "python",
        "*.html": "django-html",
        "*.js": "javascript",
        "*.svg": "django-html",
    },
    "python.formatting.provider": "black"
}
